<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>
				%d{mm:ss.SSS} %-5level - %msg%n
			</pattern>
		</layout>
	</appender>

	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>mockito-app.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>
				mockito-app.%d{yyyy-MM-dd_HH-mm}.log.zip
			</FileNamePattern>
		</rollingPolicy>

		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>
				%-26(%d{HH:mm:ss,SSS} [%thread]) %-5level %logger{32} - %msg%n
			</Pattern>
		</layout>
	</appender>

	<!-- Configure your top level package below -->
	<logger name="com.gordondickens" level="DEBUG" />

	<root level="info">
		<appender-ref ref="STDOUT" />
		<!-- appender-ref ref="FILE"/ -->
	</root>
</configuration>