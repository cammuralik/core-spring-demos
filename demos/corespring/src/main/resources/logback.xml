<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%logger{5} - %n%msg%n%n</pattern>
		</encoder>
	</appender>


	<!-- Configure your top level package below -->
	<logger name="com.gordondickens" level="DEBUG" />
 	<logger name="org.springframework.aop" level="trace" />
	<logger name="org.springframework.test.context" level="ERROR" />
	<logger name="org.junit" level="DEBUG" />

 	<logger name="org.aspectj" level="trace" />

	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>
