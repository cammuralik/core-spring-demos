<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
            <pattern>%.-1level|%-40.40logger{0}|%msg%n</pattern>
            <!--<pattern>%msg%n</pattern>-->
		</encoder>
	</appender>


	<!-- Configure your top level package below -->
	<logger name="com.gordondickens" level="DEBUG" />
 	<logger name="org.springframework.beans.factory.support.DefaultListableBeanFactory" level="trace" />
	<!--<logger name="org.springframework.context" level="trace" />-->
	<!--<logger name="org.junit" level="DEBUG" />-->

 	<!--<logger name="org.aspectj" level="trace" />-->

	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>
